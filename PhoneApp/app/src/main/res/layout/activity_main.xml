<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSensorData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Sensor Data"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@android:color/black"
        android:text="Connect"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSensorData" />

    <Button
        android:id="@+id/btnLed1On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 1 ON"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLed1Off"/>

    <Button
        android:id="@+id/btnLed1Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 1 OFF"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toTopOf="@id/btnLed1On"
        app:layout_constraintStart_toEndOf="@id/btnLed1On"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLed2On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 2 ON"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnLed1On"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLed2Off"/>

    <Button
        android:id="@+id/btnLed2Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 2 OFF"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toTopOf="@id/btnLed2On"
        app:layout_constraintStart_toEndOf="@id/btnLed2On"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLed3On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 3 ON"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnLed2Off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLed3Off"/>

    <Button
        android:id="@+id/btnLed3Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 3 OFF"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintTop_toTopOf="@id/btnLed3On"
        app:layout_constraintStart_toEndOf="@id/btnLed3On"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>